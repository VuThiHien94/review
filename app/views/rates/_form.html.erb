<%= form_for @rate do |f| %>
  <% if @rate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rate.errors.count, "error") %> prohibited this rate from being saved:</h2>

      <ul>
      <% @rate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :question_id, value: question.id %>
  <%= f.hidden_field :flag, value: question.flag %>

  <div class="field form-group">
    <%= f.label :point, "Mời bạn đánh giá", class: "title" %> </br>
    <%= f.radio_button :point, "100", required: true %> Excellent - 100% </br>
    <%= f.radio_button :point, "75", required: true %> Good - 75% </br>
    <%= f.radio_button :point, "50", required: true %> Fair - 50 </br>
    <%= f.radio_button :point, "25", required: true %> Poor - 25% </br>
    <%= f.radio_button :point, "0", required: true %> Bad - 0% </br>
  </div>

  <div class="actions">
    <%= f.submit "submit", class: "btn btn-primary" %>
  </div>
<% end %>
